.icon-menu
  display inline-block
  margin-top 0
  outline none
  small
    display block
    border-radius 3em
    width 25px
    height 4px
    margin 0 0 3px 0
    background-color color_offical_violet
    transition all 0.3s ease-in-out
    &:nth-child(1), &:nth-child(3)
      width 15px
      margin-left 5px
    &:nth-child(3)
      margin-bottom 0
  &:hover
    outline none 

.icon-menu--active
  small
    &:nth-child(1), &:nth-child(3)
      transform rotate(45deg) translateY(5.7px)
      width 25px
      height 5px
      background-color color_official_red
    &:nth-child(2)
      width 0
      height 0
    &:nth-child(3)
